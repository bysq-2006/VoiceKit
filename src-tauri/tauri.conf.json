{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VoiceKit",
  "version": "0.1.0",
  "identifier": "com.voicekit.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "VoiceKit",
        "width": 160,
        "height": 100,
        "decorations": false,
        "resizable": false,
        "maximizable": false,
        "center": true,
        "transparent": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/app-icon.png"
    ]
  }
}
